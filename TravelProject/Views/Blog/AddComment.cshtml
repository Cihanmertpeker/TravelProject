
<div class="content-form">
    <h3>Yorum Yapın</h3>
    <form method="post">

        <input type="hidden" placeholder="ID" name="BlogId" value="@ViewBag.BlogId" required />

        <input type="text" placeholder="Kullanıcı Adı" name="MemberName" required />
        <input type="text" placeholder="Mail Adresi" name="Mail" required />
        <textarea placeholder="Mesajınızı Buraya Yazın" name="MemberComment"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>
