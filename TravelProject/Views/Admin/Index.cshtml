@using TravelProject.Models.Classes
@model List<Blog> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        
        <td>@item.Id</td>
        <td>@item.Title</td>
        <td><a href="/Admin/DeleteBlog/@item.Id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/EditBlog/@item.Id" class="btn btn-warning">Güncelle</a></td>
        <td><a href="#" class="btn btn-default">Detaylar</a></td>
    </tr>
    }
</table>
<a href="/Admin/NewBlog" class="btn btn-primary">Yeni Blog Ekle</a>

