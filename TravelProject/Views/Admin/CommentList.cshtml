@using TravelProject.Models.Classes
@model List<Comment> 

@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {


    <tr>
        <td>@item.Id</td>
        <td>@item.MemberName</td>
        <td>@item.Mail</td>
        <td>@item.MemberComment</td>
        <td>@item.BlogId</td>
        <td>@item.Blog.Title</td>
        <td><a href="/Admin/DeleteComment/@item.Id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/EditComment/@item.Id"class="btn btn-warning">Güncelle</a></td>
    </tr>
    }
</table>
