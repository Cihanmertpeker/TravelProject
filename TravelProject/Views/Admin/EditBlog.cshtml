@model TravelProject.Models.Classes.Blog

@{
    ViewBag.Title = "EditBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme sayfası</h2>
<br />

@using (Html.BeginForm("EditBlog", "Admin", FormMethod.Post))
{

    <form class="form-group" method="post">


        @Html.Label("ID")
        <br />
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <br />

        @Html.Label("Başlık")
        <br />
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <br />
        @Html.Label("Tarih")
        <br />
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        <br />
        <br />
        @Html.Label("Resim")
        <br />
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
        <br />
        <br />
        @Html.Label("Açıklama")
        <br />
        @Html.TextAreaFor(x => x.Description, 10, 1, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Blog Güncelle</button>
    </form>
}

